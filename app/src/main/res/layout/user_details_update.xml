<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="20dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="#0040FF"
                android:elevation="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="User Address Update"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <EditText
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:background="@drawable/search_back"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/edit_user_phon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phon Number"
                android:textStyle="bold"
                android:textColor="#151514"
                android:textColorHint="#121210"
                android:textSize="18sp"/>


            <TextView
               android:padding="10dp"
                android:id="@+id/pd_upName"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#151514"
                android:textColorHint="#121210"
                android:textStyle="bold"
                android:text="product Name:"/>

            <TextView
                android:padding="10dp"
                android:id="@+id/pd_quantity"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#151514"
                android:textColorHint="#121210"
                android:textStyle="bold"
                android:text="Order Quantity:"/>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginBottom="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/category_Price"
                app:initialNumber="1"
                app:textSize="12dp"
                android:id="@+id/update_quantity"/>


            <LinearLayout
                android:gravity="center|center_horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <info.hoang8f.widget.FButton
                    android:layout_marginTop="8dp"
                    android:id="@+id/edit_Adress_save"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/layout_degin"
                    android:text="Update"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <info.hoang8f.widget.FButton

                    android:padding="5dp"
                    android:id="@+id/exit_button"
                    android:background="@drawable/layout_degin"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Exit"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>