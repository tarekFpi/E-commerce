<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout_id"
    tools:context=".Admin_Homepage">
<ScrollView
    android:background="@drawable/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/include_id"
            layout="@layout/too_bar"  />

        <LinearLayout
            android:weightSum="4"
            android:id="@+id/image_slide_layout"
            android:layout_below="@+id/include_id"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#0C0C0C"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:layout_margin="7dp"
                android:id="@+id/status_id"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="status"
                android:textSize="15sp"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="305dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:elevation="15dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/e_comm_home_imageSlider"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        app:iss_auto_cycle="true" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_pd_nameAdd"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="15dp"
                    >

                    <LinearLayout
                        android:elevation="20dp"
                       android:background="@drawable/im"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/plus"
                            android:padding="2dp"
                            android:background="#EFEFE9"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitXY"

                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6dp"
                            android:background="#F6F5F6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="Product Name Add"
                            android:textColor="#ECECE4"
                            android:textSize="14sp"
                            android:textStyle="normal"  />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/card_catgory_nameAdd"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="9dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:cardCornerRadius="15dp"
                    >

                    <LinearLayout
                        android:background="@drawable/imag2"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/category"
                            android:background="#EFEFE9"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitXY"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6dp"
                            android:background="#F6F5F6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="Category Name Add"
                            android:textColor="#EFEFE7"
                            android:textSize="14sp"
                            android:textStyle="normal"  />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_userArea"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:background="@drawable/im"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:background="#EFEFE9"
                            android:src="@drawable/lcation"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitXY"
                            />
                        <View
                            android:background="#F6F5F6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="User Aarea Add"
                            android:textColor="#F6F6EC"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/Card_purchase_prodcut"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:background="@drawable/log"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:background="#EFEFE9"
                            android:src="@drawable/cart"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitXY"
                            />
                        <View
                            android:background="#F6F5F6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="Purhcase product"
                            android:textColor="#ECECE6"
                            android:textSize="14sp"
                            android:textStyle="normal"  />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_stock"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:background="@drawable/im"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:background="#EFEFE9"
                           android:src="@drawable/stock"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitXY"
                            />
                        <View
                            android:background="#F6F5F6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="Stock Product"
                            android:textColor="#EAE4E4"
                            android:textSize="14sp"
                            android:textStyle="normal"  />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/card_user_order"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:background="@drawable/im5"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:background="#EFEFE9"
                           android:src="@drawable/note"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitXY"
                            />
                        <View
                            android:background="#F6F5F6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="User Order Show"
                            android:textColor="#F1F1EB"
                            android:textSize="14sp"
                            android:textStyle="normal"  />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_exceptOrder"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:background="@drawable/im5"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:background="#EFEFE9"
                           android:src="@drawable/list"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitXY"
                            />
                        <View
                            android:background="#ffff"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="Execpt Order"
                            android:textColor="#E3E3DD"
                            android:textSize="14sp"
                            android:textStyle="normal"  />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/carview_user"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/imag2"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="#EFEFE9"
                            android:scaleType="fitXY"
                            android:src="@drawable/profile" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffff" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="User SignUp Show"
                            android:textColor="#F4F4EE"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_purchase_ordershow"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:background="@drawable/im"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:background="#EFEFE9"
                          android:src="@drawable/bag"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitXY"
                            />
                        <View
                            android:background="#F6F5F6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="Purchase Order Show"
                            android:textColor="#F6F6EC"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/admin_information"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:background="@drawable/log"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:background="#EFEFE9"
                          android:src="@drawable/admin"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitXY"
                            />
                        <View
                            android:background="#F6F5F6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="Admin infromation"
                            android:textColor="#F6F6EC"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</ScrollView>


 <com.google.android.material.navigation.NavigationView
     android:id="@+id/navigation_id"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     app:menu="@menu/navigation_menu"
     android:fitsSystemWindows="true"
     android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>